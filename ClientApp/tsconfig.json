{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "components/*": [ "src/app/*" ], // For future in case we decide to create a folder for components
      "models/*": [ "src/app/shared/models/*" ],
      "interfaces/*": [ "src/app/shared/interfaces/*" ],
      "services/*": [ "src/app/core/services/*" ]
    }
  }
}
